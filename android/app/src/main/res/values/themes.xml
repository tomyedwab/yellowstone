<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Yellowstone Dark Theme -->
    <style name="Theme.Yellowstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/surface_background</item>
        <item name="colorOnPrimary">@color/surface_background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/selection_highlight</item>
        <item name="colorSecondaryVariant">@color/border_color</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/surface_background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface_background</item>
        <item name="android:navigationBarColor">@color/surface_background</item>

        <!-- App bar styling -->
        <item name="actionBarStyle">@style/YellowstoneActionBar</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline6">@style/YellowstoneTextAppearance.AppBarTitle</item>
        <item name="textAppearanceBody1">@style/YellowstoneTextAppearance.Body</item>
        <item name="textAppearanceBody2">@style/YellowstoneTextAppearance.BodySecondary</item>

        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/YellowstoneCardView</item>

        <!-- Dialog styling -->
        <item name="materialAlertDialogTheme">@style/YellowstoneAlertDialog</item>

        <!-- Popup menu styling -->
        <item name="popupMenuStyle">@style/YellowstonePopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/YellowstonePopupMenu</item>
        <item name="popupTheme">@style/YellowstonePopupTheme</item>

        <!-- Window settings for full dark theme -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <!-- Action Bar styling -->
    <style name="YellowstoneActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/surface_background</item>
        <item name="titleTextStyle">@style/YellowstoneTextAppearance.AppBarTitle</item>
        <item name="elevation">0dp</item>
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

    <!-- Card styling to match theme -->
    <style name="YellowstoneCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Task card specific styling -->
    <style name="YellowstoneTaskCard" parent="YellowstoneCardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <!-- New task card styling -->
    <style name="YellowstoneNewTaskCard" parent="YellowstoneCardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <!-- Chip styling -->
    <style name="YellowstoneChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_border</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textAppearance">@style/YellowstoneTextAppearance.ChipLabel</item>
    </style>

    <!-- Alert Dialog styling for better button contrast -->
    <style name="YellowstoneAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Button styling for better contrast -->
        <item name="buttonBarPositiveButtonStyle">@style/YellowstoneDialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/YellowstoneDialogButton.Negative</item>
        <!-- Dialog background -->
        <item name="android:background">@color/surface_background</item>
        <!-- Text colors for better contrast -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <!-- Button bar styling for proper spacing -->
        <!-- buttonBarStyle is not used in MaterialAlertDialogBuilder -->
        <!-- Control overall dialog padding for better button spacing -->
        <item name="dialogPreferredPadding">24dp</item>
    </style>

    <!-- Positive (OK) button style - should stand out as action button -->
    <style name="YellowstoneDialogButton.Positive" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/surface_background</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="cornerRadius">4dp</item>
        <!-- Add margin for spacing between buttons -->
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Negative (Cancel) button style - better contrast -->
    <style name="YellowstoneDialogButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <!-- Add margin for spacing between buttons -->
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- EditText style for dialogs - light text on dark background -->
    <style name="YellowstoneDialogEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Button spacing is handled by individual button styles, not a container style -->

    <!-- Popup menu styling for light text on dark background -->
    <style name="YellowstonePopupMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <!-- Background color -->
        <item name="android:popupBackground">@color/surface_background</item>
        <!-- Text color - light for dark background -->
        <item name="android:textColor">@color/text_primary</item>
        <!-- Item background color -->
        <item name="android:colorBackground">@color/surface_background</item>
    </style>

    <!-- Alternative popup menu theme with more specific attributes -->
    <style name="YellowstonePopupMenu.Alternative" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:popupBackground">@color/surface_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:colorBackground">@color/surface_background</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Popup theme for context menus -->
    <style name="YellowstonePopupTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:colorBackground">@color/surface_background</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:itemTextAppearance">@style/YellowstonePopupMenuTextAppearance</item>
    </style>

    <!-- Text appearance for popup menu items -->
    <style name="YellowstonePopupMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Selection checkbox style for batch select mode - more prominent visual indicator -->
    <style name="YellowstoneSelectionCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Use secondary color (selection_highlight) for the checkbox to make it stand out -->
        <item name="buttonTint">@color/selection_highlight</item>
        <!-- Make the checkbox slightly larger for better visibility -->
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
        <!-- Add some padding to make it more prominent -->
        <item name="android:padding">4dp</item>
        <!-- Add background tint when checked to provide additional visual feedback -->
        <item name="android:background">@drawable/selection_checkbox_background</item>
    </style>
</resources>
